@model IEnumerable<TransportManagementSystem.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RouteNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MorningShiftArrivalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MorningShiftDepatureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EveningShiftDepatureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EveningShiftDepatureTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MorningShiftArrivalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MorningShiftDepatureTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EveningShiftArrivalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EveningShiftDepatureTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VehicleNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VehicleNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VehicleNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
